// TODO We should use sql in the future as it is not certain if Prisma will be allowed

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
	id Int @id @unique @default(autoincrement())
	passphrase String @unique // Hashed Passphrase
}

model Company {
	id Int @id @unique @default(autoincrement())
	name String
	address String
	tel String
	email String
	deactivated Boolean @default(false)

	owner Owner?
	contact Contact?
	products Product[]
}

model Owner {
	id Int @id @unique @default(autoincrement())
	name String
	tel String
	email String

	companyID Int @unique
	company Company @relation(fields: [companyID], references: [id])
}

model Contact {
	id Int @id @unique @default(autoincrement())
	name String
	tel String
	email String

	companyID Int @unique
	company Company @relation(fields: [companyID], references: [id])
}

model Product {
	id Int @id @unique @default(autoincrement())

	name_EN String
	name_FR String

	gtin String @unique

	brand String
	country String
	
	grossWeight Float
	netContentWeight Float
	weightUnit String

	desc_EN String @db.LongText
	desc_FR String @db.LongText

	hidden Boolean @default(false)

	companyID Int
	company Company @relation(fields: [companyID], references: [id])
}